%% -*- erlang -*-

%% note that due to a ct_slave issue, this config is largely
%% duplicated in config/test.config, so changes need to go there too.
[
    {lager, [
        {suppress_supervisor_start_stop, true},
        {log_root, "log"},
        {crash_log, "crash.log"},
        {colored, true},
        {handlers, [
            {lager_file_backend, [{file, "console.log"}, {level, info}]},
            {lager_file_backend, [{file, "error.log"}, {level, error}]}
        ]}
    ]},
    {blockchain, [
        {port, 0},
        {base_dir, "data"},
        {num_consensus_members, 7},
        {seed_nodes, "{{seed_nodes}}"},
        {seed_node_dns, "{{seed_node_dns}}"}
    ]},
    {miner, [
        {batch_size, 500},
        {curve, 'SS512'},
        {block_time, 15000}
        %% {h3_resolution, 13},
    ]}
].
